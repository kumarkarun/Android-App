<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="14dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fv_icon"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/fv_icon2"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:layout_toRightOf="@id/fv_icon"/>

                <ImageView
                    android:id="@+id/fv_overflow"
                    android:src="@drawable/overflow"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_alignParentRight="true"
                    android:saveEnabled="true"/>

                <TextView
                    android:id="@+id/fv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/fv_overflow"
                    android:layout_toRightOf="@id/fv_icon"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/fv_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fv_title"
                    android:layout_toRightOf="@id/fv_icon"
                    android:layout_marginRight="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/fv_rating_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fv_title"
                    android:layout_toRightOf="@id/fv_rating" />


                <TextView
                    android:id="@+id/fv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fv_rating"
                    android:layout_toRightOf="@id/fv_icon"
                    android:textColor="#795548"
                    android:textSize="10dp" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:id="@+id/editText2" />

    <Button
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/button8"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:id="@+id/editText"
        android:layout_weight="0.20" />

    <Button
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/button7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Pic"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Pictures"
        android:id="@+id/fv_addImage"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Videos"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Restaurants"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add INNs"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal" />
</LinearLayout>