<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dd"
        android:text="Description:"

        android:layout_marginTop="15dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc"
        android:text="Description"
        android:layout_toRightOf="@id/dd"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bb"
        android:text="Brand:"

        android:layout_below="@id/dd"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brand"
        android:text="Brand"
        android:layout_toRightOf="@id/bb"
        android:layout_below="@id/dd"
        android:layout_marginTop="30dp"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/brand"
        android:stepSize="0.1"
        android:numStars="5"
        android:id="@+id/rating"
        android:clickable="false"
        android:isIndicator="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nn"
        android:text="Nutrition:"
        android:layout_below="@id/rating"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nutrition"
        android:text="nutrition"
        android:layout_toRightOf="@id/nn"
        android:layout_below="@id/rating"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pp"
        android:text="Price:"
        android:layout_below="@id/nn"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:text="price"
        android:layout_toRightOf="@id/pp"
        android:layout_below="@id/nn"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/youtube_button"
        android:text="Watch Sample Recipie on Youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_centerInParent="true"
        android:paddingTop="25dp"/>

    <!--<com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youTubePlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp"
        android:layout_marginTop="20dp"/>-->

</RelativeLayout>