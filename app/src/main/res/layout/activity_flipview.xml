<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreySilver"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        />
    <ImageView
        android:id="@+id/flip_from_to_dots_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/review_image"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/contentDividerLine" />
    <TextView
        android:id="@+id/review_name1"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flip_from_to_dots_divider"
        android:textStyle="bold"
        android:text="Name :  " />
    <TextView
        android:id="@+id/review_name"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flip_from_to_dots_divider"
        android:layout_toRightOf="@id/review_name1"
        android:text="name"/>
    <TextView
        android:id="@+id/review_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_name1"
        android:textStyle="bold"
        android:text="Email : "/>
    <TextView
        android:id="@+id/review_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_name"
        android:layout_toRightOf="@id/review_email1"
        android:text="email"/>

    <ImageView
        android:id="@+id/flip_middle_dots_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/review_email"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@color/contentDividerLine" />

    <TextView
        android:id="@+id/review_review1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flip_middle_dots_divider"
        android:textStyle="bold"
        android:text="Review : "/>
    <TextView
        android:id="@+id/review_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flip_middle_dots_divider"
        android:layout_toRightOf="@id/review_review1"
        android:textStyle="italic"
        android:text="review"/>

</RelativeLayout>